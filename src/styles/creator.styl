.creator

  ul
    padding: 0

  button
    background-color: #3D5A80
    border: 0
    color: #E0FBFC
    outline: 0
    &:focus
      box-shadow: none
    &:active
      background-color: unset !important
      border-color: unset !important
      box-shadow: none
    &:hover
      border: 0
      background-color: #98C1D9
      color: #293241

  textarea
    height: 24rem