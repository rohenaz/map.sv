@require('base')
.creator
  position: absolute
  right: 0
  background-color: #212121
  color: #E0FBFC
  width: 50vw
  height: 100vh
  overflow: auto
  @media (max-width: 910px)
    display: none
  textarea
    width: 100%
    height: 24rem
  input:not([type='radio']):not([type='checkbox'])
    width: 100%
  h1, h2
    color: #00fbff
  h3, h4, h5, h6
    color: #7387f5

  .io
    ul
      border-radius: $radius
      background-color: #111
      color: #00fbff  
      margin: 0 1rem
      padding: 1rem
  ul
    padding: 0
    list-style: none
    li
      line-height: 1.5rem
  

  .fixed
    align-items: center
    width: 50vw
    position: fixed
    bottom: 0
    right: 0
    background-color: #333
    z-index: 13
    padding: 0 1rem

  .generator-landing
    width: 100%
    height: 90vh
    display: flex
    align-items: center
    .float
      width: 100%

  .subsection
    padding-bottom: 4rem