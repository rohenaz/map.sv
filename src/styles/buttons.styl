@require('base')
button     
  border: 0
  border-radius: "calc(%s / 2)" % $radius
  outline: 0
  padding: .75rem
  cursor: pointer
  font-size: .9rem
  text-transform: uppercase
  transition: all .25s
  &:focus
    box-shadow: none
  &:active
    background-color: unset !important
    border-color: unset !important
    box-shadow: none
  &:disabled
    background-color: #666
    color: #333
    i
      color: #333
  &.primary:not(:disabled)
    background-color: #111
    color: #ccc
    i
      color: #00fbff
    &:hover:not(:disabled)
      background-color: #000
      color: #00fbff
      i
        color: #f573e9
